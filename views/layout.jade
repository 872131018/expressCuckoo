doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/stylesheets/styles.css')
    body
        block content

    //- Load external assets
    script(type='text/javascript' src='/javascripts/vendor.js')
    //- Load internal assets
    script(type='text/babel', src='/javascripts/app.js')
    script(type='text/babel' src='/javascripts/redux.js')
    script(type='text/babel' src='/javascripts/index.js')
    //- Mount the app
    script(type='text/babel').
        /*
        * Socket init function
        */
        window.addEventListener('loaded', socket());
        /*
        * Bootstrap app inside service container
        */
        var Provider = ReactRedux.Provider;
        ReactDOM.render(
            <Provider store={ store }>
                <App/>
            </Provider>,
            document.getElementById('app')
        );
